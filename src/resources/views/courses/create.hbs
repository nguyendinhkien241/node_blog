<div class="mt-4">
    <h3>Thêm khóa học</h3>
    <form method="POST" action="/courses/store">
        <div class="form-group">
            <label for="courseName">Name</label>
            <input type="text" class="form-control" id="courseName" name="name">
        </div>
        <div class="form-group">
            <label for="courseDesc">Description</label>
             <textarea class="form-control" id="courseDesc" name="description"></textarea>
        </div>
        <div class="form-group">
            <label for="videoId">Video</label>
            <input type="text" class="form-control" id="videoId" name="videoId">
        </div>
        <div class="form-group">
            <label for="level">Level</label>
            <input type="text" class="form-control" id="level" name="level">
        </div>
        <button type="submit" class="btn btn-primary">Thêm khóa học</button>
    </form>
</div>